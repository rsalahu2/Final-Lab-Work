<p id="notice" class="w3-panel"><%= notice %></p>

<h1>Products</h1>

<table class="w3-table-all">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Price</th>
      <th>Add To Cart</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= strip_tags(product.description) %></td>
        <td><%= image_tag(product.image_url)%></td>
        <td><%= number_to_currency(product.price) %></td>
        <td><%= button_to 'Add to Cart', line_items_path(product_id: product) %></td>
      </tr>
      
    <% end %>
  </tbody>
</table>

<br>
<% if session[:user_id] %>
<%= link_to 'New Product', new_product_path , class:"w3-button w3-light-gray" %>
<% end %>
